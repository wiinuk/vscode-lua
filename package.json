{
  "name": "vscode-lua",
  "displayName": "vscode-lua",
  "description": "VSCode plugin for Lua.",
  "publisher": "wiinuk",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:lua"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "dotnet fsi --quiet --exec ./server/pack.fsx && npm run compile",
    "pack": "vsce package",
    "release": "npm run pack && dotnet fsi --quiet ./server/release.fsx --",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "dotnet test ./server && node ./out/test/runTest.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wiinuk/vscode-lua.git"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vsce": "^1.81.1",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "vscode-languageclient": "^6.1.3"
  }
}
